<?xml version="1.0" encoding="UTF-8"?>
<window>
	<allowoverlay>no</allowoverlay>
	<zorder>1</zorder>
	<controls>
		<control type="group">
			<include>Animation.FadeIn</include>
			<include>Animation.FadeOut</include>
			<control type="group">
				<control type="group">
					<top>50</top>
					<bottom>600</bottom>
					<width>100%</width>
					<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) --><control type="list" id="110">
						<left>SidePad</left>
						<right>SidePad</right>
						<top>SidePad</top>
						<bottom>0</bottom>
						<onleft>111</onleft>
						<onright>111</onright>
						<onup>110</onup>
						<ondown>110</ondown>
						<pagecontrol>111</pagecontrol>
						<scrolltime>200</scrolltime>
						<itemlayout height="100" width="1760">
							<control type="label">
								<width>100%</width>
								<align>center</align>
								<selectedcolor>$VAR[ColourHighlight]</selectedcolor>
								<info>ListItem.Label</info>
								<textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
								<font>Small</font>
							</control>
						</itemlayout>
						<focusedlayout height="100" width="1760">
							<control type="label">
								<width>100%</width>
								<align>center</align>
								<textcolor>$VAR[ColourHighlight]</textcolor>
								<selectedcolor>$VAR[ColourHighlight]</selectedcolor>
								<info>ListItem.Label</info>
								<font>Small</font>
							</control>
						</focusedlayout>
					</control>
					<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) --><control type="list" id="120">
						<left>SidePad</left>
						<right>SidePad</right>
						<top>SidePad</top>
						<bottom>30</bottom>
						<onleft>111</onleft>
						<onright>111</onright>
						<onup>110</onup>
						<ondown>110</ondown>
						<pagecontrol>111</pagecontrol>
						<scrolltime>200</scrolltime>
						<itemlayout height="50">
							<control type="label">
								<width>749</width>
								<selectedcolor>$VAR[ColourHighlight]</selectedcolor>
								<info>ListItem.Label</info>
								<textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
								<font>Small</font>
							</control>
						</itemlayout>
						<focusedlayout height="50">
							<control type="label">
								<width>749</width>
								<textcolor>$VAR[ColourHighlight]</textcolor>
								<selectedcolor>$VAR[ColourHighlight]</selectedcolor>
								<info>ListItem.Label</info>
								<font>Small</font>
							</control>
						</focusedlayout>
					</control>
					<control type="label" id="200">
						<description>Scraper label</description>
						<visible>false</visible>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>